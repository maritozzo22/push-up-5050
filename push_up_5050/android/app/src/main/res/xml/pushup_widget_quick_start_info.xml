<?xml version="1.0" encoding="utf-8"?>
<!--
  4x4 Widget Info - Large widget with START button
  Uses pushup_widget_4x4 layout matching template structure
-->
<appwidget-provider
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="250dp"
    android:minHeight="250dp"
    android:targetCellWidth="4"
    android:targetCellHeight="4"
    android:updatePeriodMillis="1800000"
    android:initialLayout="@layout/pushup_widget_4x4"
    android:resizeMode="none"
    android:widgetCategory="home_screen"
    android:previewImage="@drawable/pushup_widget_preview">
</appwidget-provider>
