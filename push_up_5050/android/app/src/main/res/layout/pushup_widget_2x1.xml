<?xml version="1.0" encoding="utf-8"?>
<!--
  2x1 Widget Layout - Matching template structure exactly
  Reference: template-widget 2x1.md lines 42-158

  Structure:
  1. Top panel (62% of height) with gradient background
  2. Stats section (centered): OGGI PUSHUPS + TOTALE PUSHUPS (3-line)
  3. 3-day row at bottom (Ieri-Oggi-Domani)
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_2x1_background">

    <!-- Main vertical container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Top section: Top panel + Stats -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Top panel with gradient (62% of total height) -->
            <View
                android:id="@+id/top_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_2x1_top_panel" />

            <!-- Stats section - Centered -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="14dp"
                android:gravity="center_horizontal">

                <!-- First block: OGGI PUSHUPS -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/today_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OGGI PUSHUPS"
                        android:textColor="@color/widget_orange"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/today_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="@color/widget_text_white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <!-- Spacer between blocks -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <!-- Second block: TOTALE PUSHUPS (3-line) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTALE PUSHUPS"
                        android:textColor="@color/widget_orange"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <!-- 3-line total display: 44 / 5050 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/total_count_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/widget_text_white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />

                        <TextView
                            android:id="@+id/total_count_mid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/widget_text_white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_count_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5050"
                            android:textColor="@color/widget_text_white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Push spacer to bottom -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </FrameLayout>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <!-- 3-Day Row (bottom section) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:gravity="center">

            <!-- Yesterday -->
            <FrameLayout
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/day_yesterday_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_2x1_day_chip"
                    android:contentDescription="Yesterday status" />

                <TextView
                    android:id="@+id/day_yesterday_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="L"
                    android:textColor="@color/widget_day_pending_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03" />

            </FrameLayout>

            <!-- Gap between days -->
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <!-- Today -->
            <FrameLayout
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/day_today_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_2x1_day_chip"
                    android:contentDescription="Today status" />

                <TextView
                    android:id="@+id/day_today_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="M"
                    android:textColor="@color/widget_day_pending_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03" />

            </FrameLayout>

            <!-- Gap between days -->
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <!-- Tomorrow -->
            <FrameLayout
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/day_tomorrow_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_2x1_day_chip"
                    android:contentDescription="Tomorrow status" />

                <TextView
                    android:id="@+id/day_tomorrow_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="M"
                    android:textColor="@color/widget_day_pending_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03" />

            </FrameLayout>

        </LinearLayout>

        <!-- Day labels row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IERI"
                android:textColor="@color/widget_text_soft"
                android:textSize="9sp"
                android:gravity="center" />

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OGGI"
                android:textColor="@color/widget_orange"
                android:textSize="9sp"
                android:textStyle="bold"
                android:gravity="center" />

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DOMANI"
                android:textColor="@color/widget_text_soft"
                android:textSize="9sp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
