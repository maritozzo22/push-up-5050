<?xml version="1.0" encoding="utf-8"?>
<!-- Widget: Quick Start (4x4) -->
<!-- Shows stats, circular START button, and 7-day calendar row -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="8dp">

    <!-- Stats Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center">

        <!-- Today stats -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/today_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OGGI:"
                android:textColor="#FF6B00"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/today_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Total stats -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTALE:"
                android:textColor="#FF6B00"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 5050"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Circular START Button Container - responsive size -->
    <FrameLayout
        android:id="@+id/start_button_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <!-- Circular button background - uses square aspect ratio -->
        <ImageView
            android:id="@+id/start_button_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/circular_button_background_enhanced"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="START button" />

        <!-- START text centered -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="START"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- 7-Day Calendar Row -->
    <LinearLayout
        android:id="@+id/calendar_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center">

        <!-- Day buttons with Italian labels: L M M G V S D -->
        <!-- Each button is 24dp with status-based background -->

        <Button
            android:id="@+id/day_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:text="L"
            android:textColor="#888888"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/day_indicator_pending"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/day_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:text="M"
            android:textColor="#888888"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/day_indicator_pending"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/day_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:text="M"
            android:textColor="#888888"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/day_indicator_pending"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/day_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:text="G"
            android:textColor="#888888"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/day_indicator_pending"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/day_5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:text="V"
            android:textColor="#888888"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/day_indicator_pending"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/day_6"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:text="S"
            android:textColor="#888888"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/day_indicator_pending"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/day_7"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:text="D"
            android:textColor="#888888"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/day_indicator_pending"
            android:stateListAnimator="@null" />

    </LinearLayout>

</LinearLayout>
