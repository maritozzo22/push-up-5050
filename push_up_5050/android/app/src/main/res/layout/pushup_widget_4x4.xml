<?xml version="1.0" encoding="utf-8"?>
<!--
  4x4 Widget Layout - Matching template-widget 4x4.md exactly

  Structure:
  1. Background with gradient (bottom colors)
  2. Top panel with gradient (top colors) and rounded corners
  3. Stats section: OGGI (left), OBIETTIVO (right)
  4. Circular START button with gradient
  5. 7-day row at bottom
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_4x4_background">

    <!-- Top panel with gradient -->
    <ImageView
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/widget_4x4_top_panel"
        android:scaleType="fitXY"
        android:contentDescription="Top panel background" />

    <!-- Main content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Spacer for top panel area -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <!-- Stats row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Today stats (left) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/today_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OGGI:"
                    android:textColor="@color/widget_orange"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/today_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="41"
                    android:textColor="@color/widget_text_white"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/today_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="push-ups"
                    android:textColor="@color/widget_text_soft"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Total stats (right) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OBIETTIVO:"
                    android:textColor="@color/widget_orange"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="44 / 5050"
                    android:textColor="@color/widget_text_white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/total_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="push-ups"
                    android:textColor="@color/widget_text_soft"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <!-- START button container -->
        <FrameLayout
            android:id="@+id/start_button_container"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center">

            <!-- Button background with gradient -->
            <ImageView
                android:id="@+id/start_button_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_4x4_start_button"
                android:contentDescription="START button background" />

            <!-- START text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="START"
                android:textColor="@color/widget_text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.08"
                android:elevation="8dp" />

        </FrameLayout>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1" />

        <!-- 7-day row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/day_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="L"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/widget_day_chip_pending" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/day_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="M"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/widget_day_chip_pending" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/day_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="M"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/widget_day_chip_pending" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/day_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="G"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/widget_day_chip_pending" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/day_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="V"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/widget_day_chip_pending" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/day_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="S"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/widget_day_chip_pending" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/day_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="D"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/widget_day_chip_pending" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
