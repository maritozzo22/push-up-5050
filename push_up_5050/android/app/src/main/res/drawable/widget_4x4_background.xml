<?xml version="1.0" encoding="utf-8"?>
<!--
4x4 Widget Background - Card shell with gradient and shadow
Matches template: _CardShell with 28dp corners, box shadow 0xAA/24dp/14dp offset
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer box shadow -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="14dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_shadow_color" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Main card with gradient background -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="14dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_bottom_a"
                android:endColor="@color/widget_bottom_b" />
            <corners android:radius="28dp" />
        </shape>
    </item>

</layer-list>
