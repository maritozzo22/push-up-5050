<?xml version="1.0" encoding="utf-8"?>
<!-- Day indicator - in progress today (orange border, semi-filled) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#2A2A2A" />
            <size
                android:width="32dp"
                android:height="32dp" />
            </shape>
    </item>

    <!-- Orange border for today -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FF6B00" />
        </shape>
    </item>

</layer-list>
