<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced circular START button with gradient, glow and depth effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow/shadow -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#CC333300" />
        </shape>
    </item>

    <!-- Main button with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="70%"
                android:centerX="0.5"
                android:centerY="0.3"
                android:startColor="#FFAA33"
                android:centerColor="#FF6B00"
                android:endColor="#CC5500" />
        </shape>
    </item>

    <!-- Inner highlight for depth -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="80%"
                android:centerX="0.3"
                android:centerY="0.2"
                android:startColor="#33FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Border/stroke -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#DDFF9944" />
        </shape>
    </item>

</layer-list>
