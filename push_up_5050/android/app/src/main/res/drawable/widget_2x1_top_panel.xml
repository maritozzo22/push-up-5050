<?xml version="1.0" encoding="utf-8"?>
<!--
2x1 Widget Top Panel - Gradient rectangle (62% of widget height)
Matches template: top panel at 62% height with straight bottom edge
No curved edge (unlike 4x4), includes noise grid overlay
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base gradient panel (62% height implied via layer position in layout) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_top_a"
                android:endColor="@color/widget_top_b" />
        </shape>
    </item>

    <!-- Noise overlay grid pattern (subtle texture, same as 4x4) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
        </shape>
    </item>

</layer-list>
