<?xml version="1.0" encoding="utf-8"?>
<!--
2x1 Widget Background - Card shell with gradient and shadow
Matches template: _CardShell with 26dp corners (note: different from 4x4's 28dp)
Shadow: 0xAA/22dp/12dp offset
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer box shadow -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_shadow_color" />
            <corners android:radius="26dp" />
        </shape>
    </item>

    <!-- Main card with gradient background -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="12dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_bottom_a"
                android:endColor="@color/widget_bottom_b" />
            <corners android:radius="26dp" />
        </shape>
    </item>

</layer-list>
