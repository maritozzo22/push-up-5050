<?xml version="1.0" encoding="utf-8"?>
<!--
Day Chip - Pending/Future (Gray)
Matches template: _DayChip unselected state
Shadow: 0.25/8dp/6dp offset, Color: widget_day_pending
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item
        android:left="0dp"
        android:top="6dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <size
                android:width="32dp"
                android:height="32dp" />
        </shape>
    </item>

    <!-- Main circle - gray -->
    <item
        android:left="0dp"
        android:top="6dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/widget_day_pending" />
            <size
                android:width="32dp"
                android:height="32dp" />
        </shape>
    </item>

    <!-- Subtle highlight -->
    <item
        android:left="2dp"
        android:top="8dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="70%"
                android:centerColor="#22FFFFFF"
                android:endColor="#00000000" />
        </shape>
    </item>

</layer-list>
