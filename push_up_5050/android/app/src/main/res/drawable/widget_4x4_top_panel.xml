<?xml version="1.0" encoding="utf-8"?>
<!--
4x4 Widget Top Panel - Gradient with curved bottom edge
Matches template: _TopPanelClipper quadraticBezier curve effect
Curve depth ~12-18% of height, simulated via layer-list offset
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base gradient panel -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_top_a"
                android:endColor="@color/widget_top_b" />
        </shape>
    </item>

    <!-- Curve simulation - bottom edge taper using offset layers -->
    <!-- Left corner curve -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="50%"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_top_b" />
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>

    <!-- Right corner curve -->
    <item
        android:left="50%"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_top_b" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="16dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>

    <!-- Noise overlay grid pattern (subtle texture) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
        </shape>
    </item>

</layer-list>
