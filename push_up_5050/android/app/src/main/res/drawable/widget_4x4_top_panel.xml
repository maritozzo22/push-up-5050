<?xml version="1.0" encoding="utf-8"?>
<!--
4x4 Widget Top Panel - Gradient background
Template colors: _topA=#20262B, _topB=#111416
Note: Curved bottom edge from Flutter template not possible in XML drawable
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base gradient panel -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_top_a"
                android:endColor="@color/widget_top_b" />
        </shape>
    </item>

    <!-- Noise overlay grid pattern (subtle texture) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
        </shape>
    </item>

</layer-list>
