<?xml version="1.0" encoding="utf-8"?>
<!--
Day Chip - Missed (Red outline with X mark, no fill)
Matches template: _DayChip missed state
Stroke: widget_day_missed, 2dp width, transparent background
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Circle with stroke only (transparent fill) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="@color/widget_day_missed" />
            <size
                android:width="32dp"
                android:height="32dp" />
        </shape>
    </item>

    <!-- X mark - diagonal line 1 -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/widget_day_missed" />
                <size
                    android:width="18dp"
                    android:height="2dp" />
            </shape>
        </rotate>
    </item>

    <!-- X mark - diagonal line 2 -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/widget_day_missed" />
                <size
                    android:width="18dp"
                    android:height="2dp" />
            </shape>
        </rotate>
    </item>

</layer-list>
